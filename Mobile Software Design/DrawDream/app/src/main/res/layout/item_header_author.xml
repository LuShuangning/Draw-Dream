<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="itemHeaderAuthorViewModel"
            type="com.cuit.drawdream.drawdream.viewmodel.IndexFragmentViewModel.ItemIndexViewModel"/>
    </data>
    <LinearLayout

