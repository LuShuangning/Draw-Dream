<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="cuit.drawdream.viewmodel.LoginActivityViewModel" />
        <import type="android.view.View" />
        <import type="me.tatarka.bindingcollectionadapter.LayoutManagers" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/iv_logo_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"/>
        <EditText
            android:background="@null"
            android:layout_marginTop="16dp"
            android:id="@+id/et_username_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo_login"
            android:textSize="@dimen/md_text_size_content"
            android:hint="@string/sinIn_username"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:textColor="@color/color_hint_text"/>
        <ImageView
            android:id="@+id/iv_line1"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:layout_marginRight="@dimen/md_margin_text"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_main"
            android:layout_below="@+id/et_username_login"/>
        <EditText
            android:background="@null"
            android:layout_marginTop="16dp"
            android:id="@+id/et_pwd_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_line1"
            android:textSize="@dimen/md_text_size_content"
            android:hint="@string/sinIn_password"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:textColor="@color/color_hint_text"/>
        <ImageView
            android:id="@+id/iv_line2"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:layout_marginRight="@dimen/md_margin_text"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_main"
            android:layout_below="@+id/et_pwd_login"/>
        <TextView
            android:id="@+id/tv_logig_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="@dimen/md_text_size_appbar"
            android:layout_below="@+id/iv_line2"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:layout_marginRight="@dimen/md_margin_text"
            android:layout_marginTop="@dimen/md_margin_text"
            android:textColor="#fff"
            android:background="@color/color_main"
            android:text="登录"
            android:elevation="2dp"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/md_margin_text"
            android:layout_marginRight="@dimen/md_margin_text"
            android:layout_above="@+id/rl_others_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/md_text_size_hint"
            android:textColor="@color/color_hint_text"
            android:layout_marginBottom="24dp"
            android:text="其他登录方式"/>
        <RelativeLayout
            android:id="@+id/rl_others_login"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="56dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_qq"/>
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_wechat"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_weibo"/>
        </RelativeLayout>

    </RelativeLayout>

</layout>
